<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/recycler_item2"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item2_image"
            android:background="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_foreground"/>

        <RelativeLayout
            android:id="@+id/item2_text_left"
            android:layout_toRightOf="@id/item2_image"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item2_model_id"
                android:text="ID : default"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_name"
                android:layout_marginTop="10dp"
                android:text="이름 : No_Name"
                android:textColor="@color/black"
                android:layout_below="@id/item2_model_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_connected"
                android:layout_marginTop="10dp"
                android:text="연결된 셀 : 0"
                android:textColor="@color/black"
                android:layout_below="@id/item2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_vent"
                android:layout_marginTop="10dp"
                android:text="환기 : OFF"
                android:textColor="@color/black"
                android:layout_below="@id/item2_connected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/item2_text_right"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item2_text_left"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/item2_light"
                android:text="조명 : OFF"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_heat"
                android:layout_marginTop="10dp"
                android:text="온실 : OFF"
                android:textColor="@color/black"
                android:layout_below="@id/item2_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_humidifier"
                android:layout_marginTop="10dp"
                android:text="가습 : OFF"
                android:textColor="@color/black"
                android:layout_below="@id/item2_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item2_door"
                android:layout_marginTop="10dp"
                android:text="도어 : CLOSE"
                android:textColor="@color/black"
                android:layout_below="@id/item2_humidifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>